<Window x:Class="Estate_Predictor.View.RenameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rename" Height="180" Width="350"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None" ResizeMode="NoResize"
        Background="#F8FAFC" BorderBrush="#3B82F6" BorderThickness="1">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Enter new name:" Foreground="#1E293B" FontWeight="SemiBold" Margin="0,0,0,10"/>

            <TextBox Text="{Binding NewName, UpdateSourceTrigger=PropertyChanged}" 
                     Padding="5" FontSize="14" BorderBrush="#CBD5E1" BorderThickness="1"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Cancel" IsCancel="True" Width="80" Height="30" Margin="0,0,10,0" Background="Transparent" BorderThickness="0"/>
                <Button Content="Save" IsDefault="True" Command="{Binding SaveCommand}" 
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Width="80" Height="30" Background="#3B82F6" Foreground="White" BorderThickness="0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>